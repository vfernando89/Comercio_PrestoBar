<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Prestobar</title>
    <link href="~/Resources/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Resources/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Resources/js/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "AHome")</li>
                    <li>@Html.ActionLink("Productos", "Index", "Producto")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Cliente")</li>


                </ul>
            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Fer Perú® - @DateTime.Now.Year - </p>
        </footer>
    </div>
 
    <script src="~/Resources/js/jquery-1.10.2.min.js"></script>
    <script src="~/Resources/js/bootstrap.min.js"></script>
    <script src="~/Resources/js/jquery.form.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>